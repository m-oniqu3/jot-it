<div class="create header">
  <div class="container">
    {{> nav}}

    <form class="create-form">

      <textarea
        class="textarea"
        id="title"
        type="text"
        placeholder="title .."
        {{!-- oninput="resizeTextArea()" --}}
    ></textarea>

      <textarea
        class="textarea"
        id="subtitle"
        type="text"
        placeholder="subtitle .."
        {{!-- oninput="resizeTextArea()" --}}
      ></textarea>

      <div class="options">
        <span>
          <input type="radio" name="option" value="general" />
          <label for="general"> general</label>
        </span>

        <span>
          <input type="radio" name="option" value="todo" />
          <label for="todo"> todo</label>
        </span>

        <span>
          <input type="radio" name="option" value="random" />
          <label for="random"> random</label>
        </span>

      </div>

      <textarea
        class="textarea"
          id="content"
        {{!-- oninput="resizeTextArea()" --}}
        placeholder="jot it down .."
      ></textarea>

    </form>
  </div>
</div>

<script src="/js/create.js"></script>